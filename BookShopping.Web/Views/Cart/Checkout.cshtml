@model CheckoutModel
 
@{
    ViewData["Title"] = "Checkout";
}

<h1>Checkout</h1>



<h2>Checkout</h2>
<form asp-action="Checkout">
    <div class="py-2">
        <label asp-for="Name">Name*</label>
        <input type="text" class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="py-2">
        <label asp-for="EmailAddress">Email*</label>
        <input type="text" class="form-control" asp-for="EmailAddress" />
        <span asp-validation-for="EmailAddress" class="text-danger"></span>

    </div>

    <div class="py-2">
        <label asp-for="PhoneNumber">PhoneNumber*</label>
        <input type="text" class="form-control" asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>


    <div class="py-2">
        <label asp-for="Address">Address*</label>
        <textarea class="form-control" asp-for="Address" rows="5"> </textarea>
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="py-2">
        <span class="mr-2">COD*</span>
        <select asp-for="PaymentMethod" class="form-control">
            <option value="">Select Payment Method</option>
            @foreach (var method in Enum.GetValues(typeof(BookShopping.Web.Constants.PaymentMethods)))
            {
                <option value="@method.ToString()">@method.ToString()</option>

            }
        </select>
        <span asp-validation-for="PaymentMethod" class="text-danger"></span>
    </div>

    <div class="py-2">
        <button type="submit" c class="btn btn-info">Next</button>

    </div>
</form>
